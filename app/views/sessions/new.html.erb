<div class="row">
  <div class="col-lg-4 col-sm-4 col-lg-offset-4 col-sm-offset-4">
    <%= simple_form_for(:session, url: sessions_path, html: { class: "inline" }) do |f| %>
      <%= f.error_notification %>
      <h2>Conectar-se</h2>
      <hr class="colorgraph">
      <div class="row">
          <div class="form-group">
            <%= f.input :email, label: false, input_html: { class: "form-control input-lg" }, placeholder: "E-mail" %>
            <%= f.error :email, id: "email_error" %>
          </div>
          <div class="form-group">
            <%= f.input :password, label: false, input_html: { class: "form-control input-lg" }, placeholder: "Senha" %>
            <%= f.error :password, id: "password_error" %>
          </div>
          <div class="form-group">
            <%= f.button :submit, value: "Logar", class: "btn btn-primary btn-block btn-lg" %>
            <p>Novo usu√°rio? <%= link_to "Cadastre-se!", new_user_path %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>