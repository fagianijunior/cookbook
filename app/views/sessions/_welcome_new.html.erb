    <%= simple_form_for(:session, url: sessions_path, html: { class: "form-horizontal pull-right" }) do |f| %>
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.input :email, label: false,  input_html: { class: "form-control input-sm pull-right" }, placeholder: "E-mail" %>
          </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.input :password, label: false, input_html: { class: "form-control input-sm pull-right" }, placeholder: "Senha" %>
          </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.submit "Entrar", class: "btn btn-sm" %>                
          </div>
        </div>
      </div>
    <% end %>
