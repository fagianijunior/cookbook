<!-- user dropdown starts -->
<div class="btn-group pull-right">
  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="glyphicon glyphicon-user"></i>
    <span class="hidden-sm hidden-xs">
      <%= "#{current_user.first_name} #{current_user.last_name}" %>
    </span>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Perfil", current_user %></li>
    <li><%= link_to "Encontre novos Chiefs", users_path %></li>
    <li><%= link_to "Editar perfil", edit_user_path(current_user) %></li>
    <li class="divider"></li>
    <li>
      <%= link_to "Sair", logout_path, method: :delete %>
    </li>
  </ul>
</div>
<!-- user dropdown ends -->
<%= display_small_avatar(current_user, "pull-right") %>