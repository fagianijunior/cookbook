<%= render 'sidebar' %>
<br>
<div class="row">
  <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
    <center>
      <%= image_tag display_avatar(@user,"md"), class:"thumbnail img-responsive"%>
    </center>
    <%= render 'follow_form' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for(@post, url: posts_path, remote: true) do |f| %>
          <div class="form-inputs">
            <%= f.input :content, label: false, input_html: { class: "expand col-md-12 col-xs-12" }, placeholder: "Qual a delÃ­cia de hoje?", row: 1 %>
            <%= f.association :type_post, input_html: { value: TypePost.find(1).id }, as: :hidden %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Postar", class: "btn-default btn-post", style: "display: none" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </div>
      <div class="panel-body">
        <% @user.following.limit(10).each do |following| %>
          <div class="avatar-following pull-left">
            <%= link_to image_tag(display_avatar(following, "xs"), size: "40x40"), user_path(following.id) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">



  <ul class="timeline">
    <% @user.feed.each_with_index do |post, index| %>
      <li class=<%= 'timeline-inverted' if index%2 == 0 %>>
        <div class="timeline-badge primary"><a><i class="glyphicon glyphicon-record" rel="tooltip" title="<%= post_date post.created_at %>" id=""></i></a></div>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <span class="pull-right">
              <a href="#"><i class="glyphicon glyphicon-cog"></i></a>
              <a href="#" class="btn-close"><i class="glyphicon glyphicon-remove"></i></a>
            </span>
            <%= link_to image_tag(display_avatar(post.user, "xs"), align: "left", class: "img-circle", size: "40"), post.user %>
            &nbsp;<%= link_to "#{post.user.first_name} #{post.user.last_name}", post.user %><br>
          </div>
          <div class="timeline-body">
            <p><%= post.content %></p>
          </div>
          <div class="timeline-footer">
            <a><i class="glyphicon glyphicon-thumbs-up"></i></a>
            <a><i class="glyphicon glyphicon-share"></i></a>
            <a class="pull-right">Continuar Lendo</a>
          </div>
        </div>
      </li>
    <% end %>
    <li class="clearfix" style="float: none;"></li>
  </ul>
</div>