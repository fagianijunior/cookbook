<%= simple_form_for(:user, :html => {:class => 'inline' }) do |f| %>
<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= f.error_notification %>
      <h2>Esqueceu a senha ?</h2>
      <hr class="colorgraph">
      <div class="row">
        <div class="form-group">
          <%= f.input :email, label: false, input_html: { class: "form-control input-lg" }, placeholder: "E-mail" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group form-actions">
          <%= f.button :submit, value: "Enviar", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      </div>
  </div>
</div>  
<% end %>