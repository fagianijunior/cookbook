<%= simple_form_for(@post, url: posts_path, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, label: false, input_html: {class: "tinymce revenue"}, rows: 40, cols: 120 %>
    <%= tinymce :revenue %>
    <%= f.association :type_post, input_html: { value: TypePost.find(2).id }, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Postar", class: "btn-default" %>
  </div>
<% end %>